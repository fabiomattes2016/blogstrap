<%= simple_form_for article do |form| %>
  <div class="mb-3 row">
    <%= form.input :title, label: "Título" %>
  </div>
  <div class="mb-3 row">
    <%= form.input :body, label: "Conteúdo", input_html: { rows: 10 } %>
  </div>
  <div class="mb-3 row">
    <%= form.association :category, collection: Category.name_order, prompt: "Escolha uma categoria", label: "Categoria" %>
  </div>
  <div class="mb-4">
    <%= form.button :submit, value: "Salvar", class: "btn btn-primary" %>
    <%= link_to "Voltar", root_path %>
  </div>
<% end %>
