<%= render_if @highlights[0].present?, "longer_feature", article: @highlights[0] %>
<div class="row mb-2">
  <%= render_if @highlights[1].present?, "medium", article: @highlights[1] %>
  <%= render_if @highlights[2].present?, "medium", article: @highlights[2] %>
</div>
<div class="row g-5">
  <div class="col-md-8">
    <h3 class="pb-4 mb-4 fst-italic border-bottom">
      From the Firehose
    </h3>
    <%= link_to "Novo Artigo", new_article_path, class: "btn btn-success btn-sm mb-4" if user_signed_in? %>
    <%= render @articles %>
    <%= render "pagination" %>
  </div>
  <%= render "rightside" %>
</div>
<%= content_for :category_filter do %>
  <div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
      <% @categories.each do |category| %>
        <%= link_to category.name,
          articles_path(category: category.name),
          class: "p-2 link-secondary #{'filter-active' if category.name.to_s == params[:category]}" %>
      <% end %>
    </nav>
  </div>
<% end %>
